{
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "message": "chore(release): release %s"
    },
    "publish": {
      "ignoreChanges": [
        "README.md",
        "jest.config.js",
        "tsconfig.json",
        "*.test.ts",
        "*.test.tsx",
        "packages/visage-docs/**"
      ]
    }
  },
  "version": "independent",
  "useWorkspaces": true
}
